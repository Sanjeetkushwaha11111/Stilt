<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/_8sdp"
    android:paddingVertical="@dimen/_5sdp"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_imageview"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:src="@drawable/user_filled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircularImageViewStyle"
        />

    <TextView
        android:id="@+id/item_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/montserrat_semi_lbold"
        android:gravity="center|start"
        android:maxLines="1"
        android:minLines="1"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="Awesome taset, must try go on!!!"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/item_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_imageview"
        app:layout_constraintTop_toTopOf="@id/item_imageview"
        />

</androidx.constraintlayout.widget.ConstraintLayout>